<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kotori.mapper.CommodityMapper">
    <select id="selectAllCommodities" resultType="Commodity">
        select * from commodity
    </select>

    <insert id="insertCommodities">
        insert into commodity(name,pic,price,repertory,type) values (#{name},#{pic},#{price},#{repertory},#{type})
    </insert>

    <select id="selectByType" resultType="Commodity">
        select * from commodity where type = #{type}
    </select>
    <select id="selectByName" resultType="Commodity">
        select * from commodity
        <if test="name != null and name != ''">
            where name like concat('%',#{name},'%')
        </if>
    </select>

    <select id="selectAllType" resultType="java.lang.String">
        select distinct type from commodity
    </select>
    <select id="selectCommodityById" resultType="Commodity">
        select * from commodity where id =#{id}
    </select>

    <select id="selectCommodityByNameAndType" resultType="Commodity">
        select * from commodity
        <where>
            <if test="type != null and type != ''">
                and name like concat('%',#{name},'%')
            </if>
        </where>
    </select>

    <select id="selectNumByType" resultType="java.util.Map">
        select type,concat(count(*)) num from commodity group by type;
    </select>

    <delete id="deleteById">
        delete from commodity where id = #{id}
    </delete>
</mapper>